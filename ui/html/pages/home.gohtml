<!doctype html>
<html lang='en'>
<head>
    <meta charset='utf-8'>
    {{define "title"}} Home - Snippetbox {{end}}
</head>
<body>
    <header>
        <h1><a href='/'>Snippetbox</a></h1>
    </header>
    {{define "main"}}
        <h2>Latest Snippets</h2>
        {{if .Snippets}}
            <table>
                <tr>
                    <th>Title</th>
                    <th>Created</th>
                    <th>ID</th>
                </tr>
                {{range .Snippets}}
                    <tr>
                        <td>{{.Title}}</td>
                        <td>{{.Created}}</td>
                        <td>{{.ID}}</td>
                    </tr>
                {{end}}
            </table>
        {{else}}
            <p>Theres nothing too see yet!</p>
        {{end}}
    {{end}}
    <footer>Powered by <a href='https://golang.org/'>Go</a></footer>
</body>
</html>